<h1>Desglose del pedido</h1>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Datos del pedido</h3>
  </div>
  <div class="panel-body">
        <dl class="dl-horizontal">
          <dt><strong>Cliente</strong></dt>
          <dd><%= @pedido.cliente.nombre%> - <%= @pedido.cliente.CIF%> &nbsp;&nbsp;<b>Teléfono:</b> <%=@pedido.cliente.telefono%></dd>
          <dt><strong>Fecha</strong></dt>
          <dd><%= @pedido.fecha%></dd>
        </dl>
  
  </div>
  </div>
  <!--Detalle de piezas-->
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Piezas de tipo CASCO</h3>
  </div>
  <div class="panel-body">
      <%=@cascos%>
        <!--Aqui la cuenta de piezas-->
  		Tipos de piezas usados:&nbsp;&nbsp;<span class='badge'><%=@cascos.count%></span>
  		<% if !@cascos.empty?%>
  		<table class="table table-striped">
              <thead>
                <tr> 
            
                  <th width="50">Cantidad:</th>
                  <th>Nombre de la pieza</th>
                </tr>
              </thead>
              <tbody>
                <% @cascos.each do |componente| %>
                  <tr>
                   <td><span class='badge'><%=componente.cantidad%></span></td>
                    <td><%= componente.pieza.nombre%></td>
                    
                   
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%end%>

  </div>
</div>
 
