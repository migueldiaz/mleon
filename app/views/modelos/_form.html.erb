<%= form_for @modelo, :html => { :class => 'form-horizontal' } do |f| %>

<% if @modelo.errors.any? %>
<ul>
    <div class="form-group">
     <div class="col-lg-2"></div>
      <div class="col-lg-6">
  <% @modelo.errors.full_messages.each do |msg| %>
              <li class="text-danger"> <%= msg %></li>
  <% end %>
   </div>
  </div>
</ul>
<% end %>

  <% if !@modelo.mueble.nil?%>
      <div class="form-group">
         <%= f.label 'Mueble base', :class => 'control-label col-lg-2' %>
        <div class="col-lg-6">
         <%= f.text_field :mueble, :class => 'form-control',:disabled=>:true,:value=>@modelo.mueble.nombre %>
        </div>
      </div> 

  <%end%>
  
  <div class="form-group">
    <%= f.label 'Nombre del modelo', :class => 'control-label col-lg-2' %>
     <div class="col-lg-6">
    <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Código del modelo', :class => 'control-label col-lg-2' %>
     <div class="col-lg-6">
    <%= f.text_field :codigo, :class => 'form-control' %>
    </div>
  </div>
  <!---->
  <% if @modelo.mueble.nil?%>
      <div class="form-group">
         <%= f.label 'Mueble base', :class => 'control-label col-lg-2' %>
        <div class="col-lg-6">
         <%= f.collection_select(:mueble_id, Mueble.all, :id, :nombre, {:prompt => 'Elige el mueble base'},{:class=>'form-control'}) %>
        </div>
      </div> 
  <%end%>
  <!---->

  <div class="form-group">
    <%= f.label 'Descripción', :class => 'control-label col-lg-2' %>
    <div class="col-lg-6">
    <%= f.text_area :descripcion, :class => 'form-control' %>
    </div>
  </div>
  
  <!--
  <div class="form-group">
    <%= f.label :mueble_id, :class => 'control-label col-lg-2' %>
     <div class="col-lg-6">
    <%= f.number_field :mueble_id, :class => 'form-control' %>
    </div>
  </div>-->

  <div class="form-group">
     <div class="col-lg-2"></div>
      <div class="col-lg-6">
    <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), modelos_path, :class => 'btn' %>
    </div>
  </div>
<% end %>
