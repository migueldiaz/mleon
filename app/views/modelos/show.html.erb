<ul class="breadcrumb">Estás en: &nbsp;&nbsp;
    <li><%=link_to 'Inicio',root_path%></li>
    <li><%=link_to 'Muebles',muebles_path%></li>
    <li><%=link_to @modelo.mueble.nombre,mueble_path(@modelo.mueble)%></li>
  <li class="active"><%=@modelo.nombre%></li>
</ul>
 

<div class="page-header">
  <h1>Detalle de modelo: <%=@modelo.nombre%></h1>
</div>


<!--**********************************************-->

<ul class="nav nav-tabs">
  <li class="active"><a href="#info" data-toggle="tab">Información del modelo</a></li>
  <li><a href="#piezas" data-toggle="tab">Piezas del modelo</a></li>
</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="info">
   <!-- Informacion-->
          <br/>
          <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Nombre del modelo: <%= @modelo.nombre %></h3>
          </div>
          <div class="panel-body">
              <dl class="dl-horizontal">
              <dt>Código:</strong></dt>
              <dd><%= @modelo.codigo %></dd>
              <hr/>
              <dt><strong>Mueble base: </strong></dt>
              <dd><%= link_to @modelo.mueble.nombre,mueble_path(@modelo.mueble) %></dd>
              <dt>Piezas del modelo base:</strong></dt>
              <dd> <span class="badge"><%= @modelo.mueble.piezas.count %></span></dd>
              <dt>Total de piezas del modelo base:</strong></dt>
              <dd> <span class="badge"><%= @modelo.mueble.componentes.sum('cantidad') %></span></dd>
              
              <dt>Alto</dt>
              <dd><%= @modelo.mueble.alto %></dd>
              <dt>Ancho</dt>
              <dd><%= @modelo.mueble.ancho %></dd>
              <dt><strong>Fondo:</strong></dt>
              <dd><%= @modelo.mueble.fondo %></dd>
              <hr/>
              <dt><strong>Descripción</strong></dt>
              <dd><%= @modelo.descripcion %></dd>  
              </dl>
          </div>
</div>
  </div>
  <div class="tab-pane fade" id="piezas">
    <!-- Informacion-->
                       <!--Aquí las piezas del mueble:-->
                       <br/>
  <div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Piezas del modelo</h3>
  </div>
  <div class="panel-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th width="50">Cantidad</th>
                <th>Nombre de la pieza</th>
                <th>
                  <button type="button" class="btn btn-primary  pull-right" data-toggle="modal" data-target="#myModal">
                    Añadir piezas
                 </button>
                </th>
                </tr>
            </thead>
            <tbody>
              <% @modelo.componentes.each do |componente| %>
                <tr>
                   <td class='pull-right'><span class="badge"><%= componente.cantidad %></span></td>
                  <td><%= link_to componente.pieza.nombre, pieza_path(componente.pieza) %></td>
                 
                 <!-- <td><%=l componente.pieza.created_at %></td>-->
                  <td>
                    <%= link_to 'Borrar la pieza', [componente.modelo, componente],
                         method: :delete,
                         data: { confirm: '¿Estás seguro? Esta acción no se puede deshacer' },:class=>"btn btn-danger btn-xs pull-right" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <!--Fin-->
  </div>
  </div>
 <!--**********************************************-->





          <div class="form-actions">
            <%= link_to 'Editar', edit_modelo_path(@modelo), :class => 'btn btn-primary' %>
            <%= link_to 'Borrar',
                        modelo_path(@modelo),
                        :method => 'delete',
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>
          </div>

          <br/>





       
  
  <!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%=@modelo.nombre.capitalize%></h4>
      </div>
      <div class="modal-body">
        

        <!--Aquí el formulario-->
        
            <div class="well">
                  <i>Sólo se usan piezas del tipo <b>PUERTA y HERRAJE</b></i>
            </div>
            <%= form_for([@modelo, @modelo.componentes.build], :html => { :class => 'form-horizontal' }) do |f| %>

              <div class="form-group">
                    <%= f.label 'Pieza', :class => 'control-label col-lg-3' %>
                    <div class="col-lg-4">
                      <%= f.collection_select(:pieza_id, Pieza.all, :id, :nombre, {:prompt => 'Elige la pieza'},{:class=>'form-control '}) %>
                    </div>
              </div> 

              <div class="form-group">
                      <%= f.label 'Cantidad', :class => 'control-label col-lg-3' %>
                      <div class="col-lg-4">
                        <%= f.number_field :cantidad, :class => 'form-control' %>
                      </div>
              </div>
             
            
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
               <%= f.submit 'Guardar',:class=>'btn btn-primary' %>
            </div>

            <% end %>
    </div>
  </div>
</div>