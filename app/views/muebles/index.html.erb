<ul class="breadcrumb">Estás en: &nbsp;&nbsp;
    <li><%=link_to 'Inicio',muebles_path%></li>
  <li class="active">Muebles</li>
</ul>
<div class="page-header">
  <h1>Muebles <%= link_to 'Añadir un mueble',
            new_mueble_path,
            :class => 'btn btn-primary pull-right' %></h1>
</div>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ancho</th>
      <th>Alto</th>
      <th>Fondo</th>
      <th>Modelos</th>
      <th>Tipo</th>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @muebles.each do |mueble| %>
      <tr>
        <td width="200"><%= link_to mueble.nombre, mueble_path(mueble) %></td>
        <td><%= mueble.ancho %></td>
        <td><%= mueble.alto %></td>
        <td><%= mueble.fondo %></td>
        <td><span class="badge"><%=mueble.modelos.count%></span>&nbsp;&nbsp;<%= link_to 'Ver',mueble_modelos_path(mueble)%></td>
        <td><%= mueble.clase.nombre %></td>
        <td><%= mueble.descripcion %></td>
       <!-- <td><%=l mueble.created_at %></td>-->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mueble_path(mueble), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mueble_path(mueble),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @muebles, renderer: BootstrapPagination::Rails %>
