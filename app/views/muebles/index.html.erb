<ul class="breadcrumb">Estás en: &nbsp;&nbsp;
    <li><%=link_to 'Inicio',root_path%></li>
  <li class="active">Muebles</li>
</ul>
<div class="page-header">
  <h1>Muebles <%= link_to 'Añadir un mueble',
            new_mueble_path,
            :class => 'btn btn-primary pull-right' %></h1>
</div>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Alto</th>
      <th>Ancho</th>
      <th>Fondo</th>
      <th>Modelos</th>
      <th>Tipo</th>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @muebles.each do |mueble| %>
      <tr>
        <td width="200"><%= link_to mueble.nombre, mueble_path(mueble) %></td>
        <td><%= mueble.alto %></td>
        <td><%= mueble.ancho %></td>
        <td><%= mueble.fondo %></td>
        <td><span class="badge"><%=mueble.modelos.count%></span>&nbsp;&nbsp;<%= link_to 'Ver',mueble_modelos_path(mueble)%></td>
        <td><%= mueble.clase.nombre %></td>
        <td><%= mueble.descripcion %></td>
       <!-- <td><%=l mueble.created_at %></td>-->
         <td width="100">
              <div class="btn-group">
                <a href="<%=mueble_path(mueble)%>" class="btn btn-primary">Ver</a>
                <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="<%=edit_mueble_path(mueble)%>">Editar</a></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Borrar el mueble', mueble,
                         method: :delete,
                         data: { confirm: '¿Estás seguro? Esta acción no se puede deshacer. Los modelos de este mueble también se eliminarán' },:class=>"" %></li>
                </ul>
              </div>
         </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @muebles, renderer: BootstrapPagination::Rails %>
