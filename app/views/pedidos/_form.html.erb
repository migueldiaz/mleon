
<%= form_for @pedido, :html => { :class => 'form-horizontal' } do |f| %>	 
<% if @pedido.errors.any? %>
<ul>
    <div class="form-group">
     <div class="col-lg-2"></div>
      <div class="col-lg-6">
  <% @pedido.errors.full_messages.each do |msg| %>
              <li class="text-danger"> <%= msg %></li>
  <% end %>
   </div>
  </div>
</ul>
<% end %>
 <div class="form-group">
 	<div class='col-lg-2'></div>
 	<div class="col-lg-6">
 		<div class="well">
           <i> Una vez se guarda el pedido se pueden añadir los elementos</i>
 		</div>
 	</div>
</div>
 
   		<div class="form-group">
         <%= f.label 'Cliente', :class => 'control-label col-lg-2' %>
        <div class="col-lg-6">
         <%= f.collection_select(:cliente_id, Cliente.all, :id, :nombre, {:prompt => 'Elige el cliente'},{:class=>'form-control'}) %>
        </div>
      </div> 
     <div class="form-group">
         <%= f.label 'Fecha', :class => 'control-label col-lg-2' %>
        <div class="col-lg-6">
         <%= f.text_field :fecha, :class =>'form-control',:value=>Time.now.utc.in_time_zone("Madrid").strftime('%d/%m/%y - %H:%M'),:readonly=>:true %>
        </div>
      </div> 
 <div class="form-group">
         <%= f.label 'Estado', :class => 'control-label col-lg-2' %>
       <div class="col-lg-6">
    <%= f.select :estado, options_for_select([['Tomado', 'Tomado'], ['En producción', 'En producción'],['Entregado', 'Entregado']]) ,{}, {:class=>'form-control'}%>
    </div>
  </div>

  <div class="form-group">
  	<div class='col-lg-2'></div>
    <div class="col-lg-6">
    <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar',pedidos_path, :class => 'btn' %>
    </div>
  </div>
<% end %>
