
<div class="page-header">
  <h1>Detalles del pedido</h1>
</div>
<!--Información general del pedido-->
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Detalles del pedido</h3>
  </div>
  <div class="panel-body">
        <dl class="dl-horizontal">
          <dt><strong>Cliente</strong></dt>
          <dd><%= link_to @pedido.cliente.nombre,@pedido.cliente%></dd>
          <dt><strong>Fecha</strong></dt>
          <dd><%= @pedido.fecha%> <%= link_to 'Eliminar',
                    pedido_path(@pedido),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro? Esto no se puede deshacer')) },
                    :class => 'btn btn-danger btn-xs pull-right' %></dd>
        </dl>
  
  </div>
</div>
<!-- Items del pedido-->
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Elementos del pedido</h3>
  </div>
  <div class="panel-body">
              <span><%=link_to 'Añadir',new_pedido_item_path(@pedido),:class=>'btn btn-primary pull-right'%></span>
              <table class="table table-striped">
              <thead>
                <tr> 
                  <th>Cantidad</th>
                  <th>Nombre del modelo</th>
                  <th >Acciones </th>
                </tr>
              </thead>
              <tbody>
                <% @pedido.items.each do |item| %>
                  <tr>
                    <td width="20"><span class='badge'><%= item.cantidad%></span></td>
                    <td><%=link_to item.modelo.nombre,item_path(item) %></td>
                    <td>
                      <%= link_to 'Editar',
                                  edit_item_path(item), :class => 'btn btn-primary btn-xs' %>
                      <%= link_to 'Eliminar',
                                  item_path(item),
                                  :method => :delete,
                                  :data => { :confirm => 'Se eliminara este elemento del pedido.¿Estás seguro?'},
                                  :class => 'btn btn-danger btn-xs' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
  </div>
</div>


